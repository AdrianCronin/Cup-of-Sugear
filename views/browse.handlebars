{{!-- gear card container --}}
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">

    {{!-- gear card template --}}
    {{#each gear as |item|}}
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{item.name}}</h5>
          <p class="card-text">Description: {{item.description}}</p>
          <p>Due Date:</p>
          <button>Checkout</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>