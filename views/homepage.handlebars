{{!-- Hero Bar --}}
<div class="px-4 py-5 my-5 text-center hero">
  <h1 class="display-5 fw-bold">Welcome to Cup of Sugar</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Where neighbors borrow and lend!</p>
  </div>
</div>

{{!-- category container --}}
<main class="container mt-3">
  <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-between">

    {{!-- category box template --}}
    {{#each categories as |category|}}
    <div class="col">
      <div class="card mb-3" style="max-width: 18rem;">
        <a href="/api/categories/{{category.id}}" class="text-decoration-none text-center">
          <img src="/img/cat-{{category.category}}.jpg" class="card-img-top">
          <div class="card-body">
            <h3 class="card-title">{{category.category}}</h3>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
</main>