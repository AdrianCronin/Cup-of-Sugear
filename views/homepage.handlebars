{{!-- Hero Bar --}}
<div class="px-4 py-5 my-5 text-center hero">
  <h1 class="display-5 fw-bold">Welcome to Cup of Sugar</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Where neighbors borrow and lend!</p>
  </div>
</div>

{{!-- category container --}}
<main class="container container-fluid mt-5">
  <div class="d-flex flex-wrap row justify-content-between">

    {{!-- category box template --}}
    {{#each categories as |category|}}
    <div class="card col-3 m-2">
      <a href="/api/categories/{{category.id}}" class="text-decoration-none text-center">
        <h3>{{category.category}}</h3>
        <p>description</p>
      </a>
    </div>
    {{/each}}

</main>